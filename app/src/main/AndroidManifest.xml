<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- âœ… Internet access for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.FOODFIT"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules">

        <!-- ðŸŸ¢ SplashActivity is now the launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FOODFIT">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”„ FoodSearchActivity called from SplashActivity -->
        <activity
            android:name=".FoodSearchActivity"
            android:exported="true"
            android:theme="@style/Theme.FOODFIT" />

        <!-- ðŸ“Š Optional: MainActivity if you're using it for results or other logic -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FOODFIT" />

    </application>

</manifest>